alizarian = #E74C3C
amethyst = #9B59B6
turquoise = #1ABC9C

body
  font: 14px "Proxima Nova", "Lucida Grande", Helvetica, Arial, sans-serif
  background: #2C3E50;

#logo
  width: 190px
  height: 60px
  margin-left: auto
  margin-right: auto
  margin-top: 20px
  display: block

.container .btn-spark
  border-radius: 100px
  color: white
  border: none
  margin-top: 20px
  font-size: 18px
  font-weight: 300

.btn-spark:active
  box-shadow: 0 2px 2px rgba(0, 0, 0, .2) inset

.btn-alizarian
  background: alizarian
  color: white

.btn-alizarian:hover
  background: darken(alizarian, 20%)
  color: white

.btn-amethyst
  background: amethyst

.btn-amethyst:hover
  background: darken(amethyst, 20%)
  color: white

.btn-turquoise
  background: turquoise

.btn-turquoise:hover
  background: darken(turquoise, 20%)
  color: white